<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="faqMapper">

	<resultMap id="categoryResultSet" type="questionCategory">
		<result column="CATEGORY_NO" property="categoryNo"/>
		<result column="CATEGORY_NAME" property="categoryName"/>
	</resultMap>

	<resultMap id="faqResultSet" type="faq">
		<result column="FAQ_NO" property="faqNo"/>
		<result column="MEMBER_NO" property="memberNo"/>
		<result column="CATEGORY_NO" property="categoryNo"/>
		<result column="FAQ_QUESTION" property="faqQuestion"/>
		<result column="FAQ_ANSWER" property="faqAnswer"/>
		<result column="CREATE_DATE" property="createDate"/>
	</resultMap>

	<select id="selectCategoryList" resultMap="categoryResultSet">
		SELECT
		       CATEGORY_NO,
		       CATEGORY_NAME
		  FROM
		       QUESTION_CATEGORY
	</select>
	
	<insert id="insertFaq" parameterType="faq">
		INSERT
		  INTO
		       FAQ
		       (
		       FAQ_NO,
		       MEMBER_NO,
		       CATEGORY_NO,
		       FAQ_QUESTION,
		       FAQ_ANSWER
		       )
		VALUES
		       (
		       SEQ_FAQ.NEXTVAL,
		       #{memberNo},
		       #{categoryNo},
		       #{faqQuestion},
		       #{faqAnswer}
		       )
	</insert>
	
	<select id="selectFaqList" resultMap="faqResultSet">
		SELECT
		       FAQ_NO,
		       MEMBER_NO,
		       CATEGORY_NO,
		       FAQ_QUESTION,
		       FAQ_ANSWER,
		       TO_CHAR(CREATE_DATE, 'YYYY-MM-DD') as "CREATE_DATE"
		  FROM
		       FAQ
		 ORDER
		    BY
		       CREATE_DATE DESC 		       
	</select>
	
	<select id="faqSearchList" parameterType="_int" resultMap="faqResultSet">
		SELECT
		       FAQ_NO,
		       MEMBER_NO,
		       CATEGORY_NO,
		       FAQ_QUESTION,
		       FAQ_ANSWER,
		       TO_CHAR(CREATE_DATE, 'YYYY-MM-DD') as "CREATE_DATE"
		  FROM
		       FAQ
		 <if test="category == 0">		 
		 </if>		       
		 <if test="category == 1">		 
		 WHERE
		       CATEGORY_NO = 1
		 </if>
		 <if test="category == 2">
		 WHERE
		       CATEGORY_NO = 2
		 </if>
		 <if test="category == 3">
		 WHERE
		       CATEGORY_NO = 3
		 </if>
		 <if test="category == 4">
		 WHERE
		       CATEGORY_NO = 4
		 </if>         
		 ORDER
		    BY
		       CREATE_DATE DESC 		       
	</select>
	
	
	
	
</mapper>